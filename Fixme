void Frame::CloseRefresh(wxCloseEvent &event) {
    //qui ci va cosa succede quando chiudo la finestra del search

    std::cout << "Frame::CloseRefresh()" << std::endl;
    ClearFrame();
    for(int i = 0; i < namesSearch.size(); i++) {
        std::cout << "1" << std::endl;
        std::cout <<"names.size = " << names.size() << std::endl;
        std::cout <<"namesSearch.size = " << namesSearch.size() << std::endl;
        for(int j = 0; j < names.size(); j++) {
            std::cout << "2" << std::endl;
            if(namesSearch[i] == names[j]) {
                std::cout << "3" << std::endl;
                if(completedSearch[i]== true){
                    std::cout << "4" << std::endl;
                    taskListBox->Check(j,true);
                    std::cout << "5" << std::endl;
                } else{
                    taskListBox->Check(j,false);
                    std::cout << "6" << std::endl;

                }
            }
            showTaskFrame(names[j], dates[j], priorities[j], completedSearch[j],j);
            std::cout << "7" << std::endl;

        }
    }

    event.Skip();
}
